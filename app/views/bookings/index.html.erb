<div class="wrapper", style="background-image: linear-gradient(-225deg, rgba(0,101,168,0) 0, rgba(70,70,70,0.3) 50%), url('https://source.unsplash.com/llNrizoUL84');background-size:cover;height:100vh;color:white;">

<div class="container">
  <div class="header" style="margin-bottom: 48px;">
    <h1 class="text-center">My bookings</h1>
  </div>


  <% @bookings.each do |booking| %>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="booking">
            <p><strong><%= link_to booking.rv.name, rv_path(booking.rv)%></strong></p>
            <p>From <%= booking.check_in_on %></p>
            <p>To <%= booking.check_out_on %></p>
            <p>Price <%= booking.price %>$</p>
            <p>Status: <%= booking.status %></p>
        </div>
      </div>
    </div>
  <% end %>


</div>
</div>
