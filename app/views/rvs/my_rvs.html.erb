<h1>My RVs</h1>
<% @my_rvs.each do |rv| %>
  <h3><%= rv.name %></h3>
  <%= link_to "Details of this RV", rv_path(rv)%>
  <% if rv.bookings.length != 0 %>
    <p>Bookings for this rv: </p>
    <% rv.bookings.each do |b| %>
        <p><%= b.user.first_name %> <%= b.user.last_name %></p>
        <p><%= b.price %></p>
        <p><%= b.check_in_on %></p>
        <p><%= b.check_out_on %></p>

    <% end %>
  <% else %>
    <p>No bookings for this RV.</p>
  <% end %>
<% end %>
