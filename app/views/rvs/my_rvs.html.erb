<h1>My RVs</h1>
<% @my_rvs.each do |rv| %>
  <h3><%= rv.name %></h3>
  Details: <%= link_to "Show", rv_path(rv), class: "btn btn-primary" %>
  <%= link_to "Edit", edit_rv_path(rv), class: "btn btn-primary" %>
  <%= link_to "Remove", rv_path(rv), method: :delete, class: "btn btn-warning", data: { confirm: 'Are you sure?' } %>
  <% if rv.bookings.length != 0 %>
    <p>Bookings for this rv: </p>
    <% rv.bookings.reverse_each do |b| %>
        <p><%= b.user.first_name %> <%= b.user.last_name %></p>
        <p><%= b.price %></p>
        <p><%= b.check_in_on %></p>
        <p><%= b.check_out_on %></p>
        <% if (b.status == "Pending") %>
        <%= simple_form_for [rv, b] do |t| %>
          <%= t.hidden_field :status, :value => "Accepted" %>
          <%= t.submit "Accept", class: "btn btn-success" %>
        <% end %>
        <%= simple_form_for [rv, b] do |t| %>
          <%= t.hidden_field :status, :value => "Cancelled" %>
          <%= t.submit "Cancel", class: "btn btn-danger" %>
          <% end %>
        <% end %>
        <%= b.status %>
    <% end %>
  <% else %>
    <p>No bookings for this RV.</p>
  <% end %>
<% end %>
