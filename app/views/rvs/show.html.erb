
 <div class="container text-center">
   <%= image_tag 'https://source.unsplash.com/FjtE9VKlKg4/500x300' %>
  <h2><%= @rv.name %></h2>
    <p>Kind: <%= @rv.kind %></p>
    <p>Owner: <%= @rv.user.first_name %><%= @rv.user.last_name %></p>
    <p>Localisation: <%= @rv.localisation %></p>
    <p>Beds: <%= @rv.number_of_beds %></p>
    <p>Number of guests: <%= @rv.number_of_guests %></p>
    <p>Price per night: <%= @rv.price_per_night %></p>
    <p>Minimum stay: <%= @rv.min_stay %></p>

<%= link_to "Make a booking", new_rv_booking_path(@rv), class:"btn btn-primary" %>
<%= link_to "Back to all RVs", root_path, class:"btn btn-primary" %>
 </div>
