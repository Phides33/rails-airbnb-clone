<div class="wrapper", style="background-image: linear-gradient(-225deg, rgba(0,101,168,0) 0, rgba(32,36,61,0.3) 50%), url('https://source.unsplash.com/Ftp97Iok6ak');background-size:cover;height:100vh;color:white;">


<div class="container text-center">

  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="row text-left">
      <div class = "col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-inputs">
          <%= f.input :first_name, autofocus: true %>
          <%= f.input :last_name, autofocus: true %>
          <%= label_tag(:date_of_birth, "Date of birth") %>
          <br>
          <%= f.text_field :date_of_birth, "data-provide" => "datepicker",  "data-date-format" => "dd/mm/yyyy" %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :phone_number, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>
      </div>
    </div>

    <div class="form-actions" style="margin-bottom: 20px;">
      <%= f.button :submit, "Sign up", class:"btn btn-primary" %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
</div>
</div>
